<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    {# Raleway #}
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">
    {# Hind #}
    <link href="https://fonts.googleapis.com/css?family=Hind:400,300,600,500,700" rel="stylesheet" type="text/css">
    {# Font Awesome #}
    <!-- Main CSS -->
    <link rel="stylesheet" href="{{ '/css/normalize.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/skeleton.css' | url }}">
    
    <!-- Code Theme -->
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <header>
      <div class="container">
      <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>

      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      <ul class="nav">
      {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
      </ul>

      {# {% set navPages = collections.all | eleventyNavigation %}
      {% macro renderNavListItem(entry) -%}
      <li{% if entry.url == page.url %} class="my-active-class"{% endif %}>
        <a href="{{ entry.url | url }}">{{ entry.title }}</a>
      {%- if entry.children.length -%}
        <ul>
          {%- for child in entry.children %}{{ renderNavListItem(child) }}{% endfor -%}
        </ul>
      {%- endif -%}
      </li>
      {%- endmacro %}

      <ul>
      {%- for entry in navPages %}{{ renderNavListItem(entry) }}{%- endfor -%}
      </ul> #}
    </div>
    </header>
    <div class="container">
      <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
        {{ content | safe }}
      </main>
    </div>

    <footer>
    <div class="container">
      The footer is no longer empty.
      Current page: {{ page.url | url }}
      </div>
    </footer>
  </body>
</html>
